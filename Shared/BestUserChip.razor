@using MudBlazor

<MudChip OnClick="HandleOnClick" DisableRipple="true" Variant="Variant.Outlined" Color="Color.Success">@_name</MudChip>

@code {
    private string _name = string.Empty;

    private const int Max_Name_Length = 40;

    [Parameter]
    public string UserTag { get; set; }

    [Parameter]
    public EventCallback<string> OnClick { get; set; }

    protected override void OnParametersSet()
    {
        base.OnParametersSet();

        _name = UserTag;

        if (_name.Length > Max_Name_Length)
            _name = _name.Substring(0, Max_Name_Length - 3) + "..";
    }

    private void HandleOnClick()
    {
        if (UserTag.Length > Max_Name_Length)
            OnClick.InvokeAsync(UserTag);
    }
}
